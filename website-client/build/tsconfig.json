{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist/",
    "mapRoot": "./dist/",
    "skipLibCheck": true
  }
}
